<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <com.contusfly.views.CircularImageView
        android:id="@+id/image_chat_picture"
        android:layout_width="@dimen/margin_36"
        android:layout_height="@dimen/margin_36"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:contentDescription="@string/title_app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_profile" />

    <io.github.rockerhieu.emojicon.EmojiconTextView
        android:id="@+id/user_chat_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/sf_ui_display_semi_bold"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="@color/user_tag_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/image_chat_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_chat_picture"
        app:layout_constraintTop_toTopOf="@+id/image_chat_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>